<style>
  .custom-form {
    background-color: black;
    color: white;
    padding: 20px;
  }
  
  .center-button {
    text-align: center;
  }
</style>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 custom-form">
      <%= form_with(model: cliente) do |form| %>
        <div class="alert alert-danger" role="alert">
          <% if cliente.errors.any? %>
            <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

            <ul>
              <% cliente.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :numero_telefonico, class: "control-label" %>
          <%= form.text_field :numero_telefonico, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :nombre, class: "control-label" %>
          <%= form.text_field :nombre, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email, class: "control-label" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group center-button">
          <%= form.submit "Guardar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
